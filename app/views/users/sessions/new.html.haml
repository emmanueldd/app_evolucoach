.bg-dark-blue.full-height
  .container
    .row
      .col-12.col-md-6.offset-md-3.col-lg-6.offset-lg-3
        = render 'layouts/header'
        %h2 Connexion
        = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .form-inputs
            = f.input :email, required: false, input_html: { autocomplete: "email" }
            = f.input :password, required: false, input_html: { autocomplete: "current-password" }
            = f.input :remember_me, as: :boolean, input_html: { checked: true } if devise_mapping.rememberable?
          .form-actions
            %br
            = f.button :submit, "Connexion", class: 'custom-btn blue-bg'
        = render "users/shared/links"
