<%= render 'layouts/header' %>
<!--Content Area-->
<div class="content-area no-pdt bg-dark-blue">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="content-inner">

          <div class="panel panel-default">
            <div class="panel-heading">
              <div class="panel-title">
                <ul class="nav nav-tabs border-tab">
                  <li class="">
                    <a href="#exercices" data-toggle="tab" class="active">exercices</a>
                  </li>
                  <li>
                    <a href="#notes" data-toggle="tab">notes</a>
                  </li>
                </ul>
              </div>
            </div>

            <div class="panel-body">
              <div class="tab-content">
                <div class="tab-pane active" id="exercices">
                  <div class="pacto-content">
                    <% @exercise_categories.each do |category| %>
                    <h2 class="subtitle pl-15 fontlight"><%= category.name %></h2>
                    <% category.exercises.published.each do |exercise| %>
                    <%= simple_form_for [:dashboard, @program_step], url: dashboard_program_step_index_path do |f| %>
                    <%= f.hidden_field :exercise_id, value: exercise.id %>
                    <%= f.hidden_field :exercise_category_id, value: exercise.exercise_category_id %>
                    <button type="submit" class="full-width text-left"><b><%= exercise.name %></b>
                      <% if @program_steps.exists?(exercise_id: exercise.id) %>
                      <%= image_tag 'tik.png', alt: 'déjà présent dans le programme' %>
                      <!-- <small>déjà présent dans le programme</small> -->
                      <% end %>
                      <span>+</span>
                    </button>
                    <% end %>
                    <% end %>
                    <% end %>

                  </div>

                </div>
                <div class="tab-pane" id="notes">
                  <div class="pacto-content page20">
                    <a href="<%= edit_dashboard_program_path(@program, step: 'rest_note') %>"><%= image_tag "i.png", alt:"" %>Ajouter une note de repos<span>+</span></a>
                    <a class="blue-dark-bg" href="<%= edit_dashboard_program_path(@program, step: 'info_note') %>"><%= image_tag "i.png", alt:"" %>Ajouter une note d'information<span>+</span></a>
                  </div>
                </div>
              </div>
            </div>
            <div class="btn-group dropup">
              <div class="add-item-margin"></div>
              <div class="add-item fixed">
                <!-- <p class="fontlight">Ajouter un exercice</p> -->
                <a href="#"  data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="circle-btn">+</a>
                <!-- <a href="" class="circle-btn  dropdown-toggle">+</a> -->
                <div class="dropdown-menu">
                  <!-- Dropdown menu links -->
                  <a href="<%= new_dashboard_program_path(step_type: 'info') %>">Information</a><br><br>
                  <a href="<%= new_dashboard_program_path(step_type: 'rest') %>">Repos</a><br><br>
                  <a href="<%= new_dashboard_program_path(step_type: 'exercise') %>" >Exercice</a>
                  <br>
                  <br>
                </div>
              </div>
            </div>
          </div>



        </div>
      </div>
    </div>
  </div>
</div>
<!--Content Area-->
